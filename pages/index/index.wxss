/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
/* 公告栏 */
.news{
    width: 95%;
    height: 75rpx;
    margin: 20rpx auto;
    border-radius: 10rpx;
    /* border: 1px solid #0000a7; */
    box-shadow: 4px 4px 4px 2px rgba(0, 0, 0, 0.2);
}
.news_left{
    width: 35%;
    height: 100%;
    float: left;
  }
  .image2{
    width: 60rpx;
    height: 60rpx;
    margin-top: 8rpx;
    margin-left: 15rpx;
    float: left;
  }
  .news_title{
    float: left;
    line-height: 85rpx;
    margin-left: 5rpx;
    font-weight: 700;
    font-size: 35rpx;
    color: #050d9e;
    }
    .news_right{
        width: 65%;
        float: left;
        height: 100%;
      }
      .box {
        width: 100%;
        margin: 0 auto;
        overflow: hidden;
      }
      .animate {
        padding-left: 20px;
        font-size: 27rpx;
        font-weight: 600;
        color: #88888b;
        display: inline-block;
        white-space: nowrap;
        animation: 10s wordsLoop linear infinite normal;
        line-height: 80rpx;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        letter-spacing: 2px;
        text-align: center;
      }
      .swiper-news-top{
        width: 100%;
        height: 100%;
      }
      .module{
          margin: auto;
          margin-top: 10rpx;
          height: 700rpx;
          width: 80%;
      }
      .first_module{
          display: flex;
          height: 33.3%;
          width: 100%;
          flex-direction: row;
          justify-content: space-around;
      }
      .first_left{
          width: 25%;
          height: 100%;
      }
      .first_left text{
          padding-left: 10rpx;
      }
      .first_left image{
          width: 100%;
          height: 70%;
      }
      .second{
        width: 25%;
        height: 100%;
    }
    .second image{
        width: 100%;
        height: 70%;
    }
    .second text{
        padding-left: 10rpx;
    }
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
